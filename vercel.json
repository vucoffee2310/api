{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "env": {
    "DEEPGRAM_API_KEY": "09076bcd8ede509b9c6e1c98d2ecfb26e7d8cccd",
    "UPLOAD_URL": "https://manage.deepgram.com/storage/assets"
  },
  "regions": ["hkg1"],
  "builds": [
    {
      "src": "api/index.sh",
      "use": "vercel-bash@4.2.0",
      "config": {
        "memory": 1536,
        "maxDuration": 300
      }
    }
  ],
  "buildCommand": "bash build.sh",
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/api/index.sh"
    }
  ]
}
