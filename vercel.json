{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "builds": [
    {
      "src": "api/index.sh",
      "use": "vercel-bash@4.2.0",
      "config": {
        "memory": 1536,
        "maxDuration": 200
      }
    }
  ],
  "env": {
    "DEEPGRAM_API_KEY": "@deepgram_api_key",
    "SECRET": "@my_secret"
  },
  "regions": ["hkg1"],
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/api/index.sh"
    }
  ]
}
